SEGMENT_END=""
LINE_START=""

custom_start_agnoster() {
  prompt_segment '' "$PRIMARY_FG" "$LINE_START%{%K{$PRIMARY_FG}%F{white}%} " 
}

prompt_aks_ctx() {
  K8S_CURRENT_CTX=$(kubectl config current-context)
  BG=red
  [[ -z "$K8S_CURRENT_CTX" || "$SHOW_K8S_CTX_PROMPT" = false ]] && return
  case "$K8S_CURRENT_CTX" in
    *-live*-(prod|tool)-h*) BG=red ;;
    *-live*-test-h*) BG=yellow ;;
    *-live*-play-h*) BG=cyan ;;
    *) BG=green ;;
  esac
  prompt_segment $BG black "\u2388 ${K8S_CURRENT_CTX:gs/%/%%}"
}

# End the prompt, closing any open segments
custom_prompt_end() {
  if [[ -n $CURRENT_BG ]]; then
    echo -n " %{%k%F{$CURRENT_BG}%}$SEGMENT_END"
  else
    echo -n "%{%k%}"
  fi
  echo -n "%{%f%}"
  CURRENT_BG=''
}


AGNOSTER_PROMPT_SEGMENTS[6]=custom_prompt_end
AGNOSTER_PROMPT_SEGMENTS[2]=prompt_aks_ctx
AGNOSTER_PROMPT_SEGMENTS=("custom_start_agnoster" "${AGNOSTER_PROMPT_SEGMENTS[@]}")

